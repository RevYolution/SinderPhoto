@{
    ViewData["Title"] = "Contact";
}
<h1>@ViewData["Title"]</h1>

<p>For all pricing and booking questions, please fill out the form below. Include as much detail as possible. I look forward to hearing from you.</p>

<form method="post" action="ContactRequest.cshtml">
    <div class="row">
        <div class="col">
            <input type="text" class="form-control" placeholder="First Name" />
        </div>
        <div class="col">
            <input type="text" class="form-control" placeholder="Last Name" />
        </div>
    </div>
    <div class="form-group">
        <label for="EmailforContactForm">Email</label>
        <input type="email" class="form-control" id="form-email" placeholder="yourEmail@email.com" />
    </div>
    <div class="form-group">
        <label for="SubjectforContactForm">Subject</label>
        <input type="text" class="form-control" id="form-subject" />
    </div>
    <div class="form-group">
        <label for="MessageInfoForContact">Additional Information</label>
        <textarea class="form-control" id="form-message" cols="30" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Form</button>
</form>